extends templates/_template.pug

block content
	.navbar.navbar-expand-sm.bsnav.bsnav-sidebar.bsnav-sidebar-right.bsnav-sidebar-condensed

		a.navbar-brand.align-self-end(href="#") bsnav

		button.navbar-toggler.toggler-spring
			span.navbar-toggler-icon


		.collapse.navbar-collapse.justify-content-sm-start.align-items-start
			ul.navbar-nav.navbar-mobile.mr-0
				li.nav-item.active
					a.nav-link(href="#") #[span.icon-thumbnail: i.fa.fa-home] Home
				li.nav-item
					a.nav-link(href="#") #[span.icon-thumbnail: i.fa.fa-newspaper-o] News
				li.nav-item
					a.nav-link(href="#") #[span.icon-thumbnail: i.fa.fa-image] Gallery
				li.nav-item
					a.nav-link(href="#") #[span.icon-thumbnail: i.fa.fa-envelope] Contact



	.bsnav-body-wrapper
		.jumbotron.jumbotron-fluid
			.container
				h1 Sidebar condensed right
		

		.container
			script(src="https://gitlab.com/snippets/1829410.js")
	


	.bsnav-mobile
		.bsnav-mobile-overlay
		.navbar


	style.
		.jumbotron{
			background: url('https://picsum.photos/1400/700?random') no-repeat center top / cover;
			color: #fff;
			height: 600px;
			display: flex;
			align-items: center;
		}