				li.nav-item.active
					a.nav-link(href="#") #[span.title Home] #[span.icon-thumbnail: i.fa.fa-home]
				li.nav-item
					a.nav-link(href="#") #[span.title News] #[span.icon-thumbnail: i.fa.fa-newspaper-o]
				li.nav-item
					a.nav-link(href="#") #[span.title Gallery] #[span.icon-thumbnail: i.fa.fa-image]
				li.nav-item
					a.nav-link(href="#") #[span.title Contact] #[span.icon-thumbnail: i.fa.fa-envelope]




	.bsnav-body-wrapper
		.jumbotron.jumbotron-fluid
			.container
				h1 Sidebar condensed
		

		.container
			//- script(src="https://gitlab.com/snippets/1716956.js")
	


	.bsnav-mobile
		.bsnav-mobile-overlay
		.navbar


