extends templates/_template.pug

block content
	.navbar.navbar-expand-sm.bsnav.bsnav-sidebar.bsnav-sidebar-left.bsnav-sidebar-condensed

		a.navbar-brand.align-self-start(href="#") bsnav

		button.navbar-toggler.toggler-spring
			span.navbar-toggler-icon


		.collapse.navbar-collapse.justify-content-sm-start.align-items-start
			ul.navbar-nav.navbar-mobile.mr-0
				li.nav-item.active
					a.nav-link(href="#") Home #[span.icon-thumbnail: i.fa.fa-home]
				li.nav-item
					a.nav-link(href="#") News #[span.icon-thumbnail: i.fa.fa-newspaper-o]
				li.nav-item
					a.nav-link(href="#") Gallery #[span.icon-thumbnail: i.fa.fa-image]
				li.nav-item
					a.nav-link(href="#") Contact #[span.icon-thumbnail: i.fa.fa-envelope]



	.bsnav-body-wrapper
		.jumbotron.jumbotron-fluid
			.container
				h1 Sidebar condensed
		

		.container
			script(src="https://gitlab.com/snippets/1829407.js")
	


	.bsnav-mobile
		.bsnav-mobile-overlay
		.navbar


	style.
		.jumbotron{
			background: url('https://picsum.photos/1400/700?random') no-repeat center top / cover;
			color: #fff;
			height: 600px;
			display: flex;
			align-items: center;
		}